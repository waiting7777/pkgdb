include head

        link(rel="stylesheet", href="css/style.css")

        script(src="js/jquery.tablesorter.min.js")
        script(src="js/index.js")

        title Pokemon Database

    body
        include headbar
        div.container
            div.page-header
                h1 Pokemon Go Database
                h2.text-info 神奇寶貝資料庫
            div.table-contain
                table#pokemon-table.table.table-bordered.table-hover.table-striped
                    thead
                        tr
                            th Pokemon Id
                                i.fa.fa-caret-down
                                i.fa.fa-caret-up
                            th Pokemon
                            th.hidden-xs Name En
                                i.fa.fa-caret-down
                                i.fa.fa-caret-up
                            th Name Tw
                                i.fa.fa-caret-down
                                i.fa.fa-caret-up
                            th Type
                                i.fa.fa-caret-down
                                i.fa.fa-caret-up
                            th Max Cp
                                i.fa.fa-caret-down
                                i.fa.fa-caret-up
                    tbody
                        for pokemon in pokemons
                            tr
                                td= pokemon.PokemonId
                                td
                                    img(src="image/pokemon/#{pokemon.PokemonId}.png")
                                td.hidden-xs
                                    a(href="pokemon/#{pokemon.PokemonId}") #{pokemon.NameEn}
                                td
                                    a(href="pokemon/#{pokemon.PokemonId}") #{pokemon.NameTw}
                                td= pokemon.type
                                td= pokemon.MaxCp
